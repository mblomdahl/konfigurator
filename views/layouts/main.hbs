<!-- views/layouts/main.hbs -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Konfigurator{{#if title }}: {{ title }}{{/if}}</title>
</head>
<body>
<p align='right'>
  {{#if user }}
    Användare: <a href="/profile">{{ user.display_name }} ({{ user.user_id }})</a> |
    <a href="/overview">Miljööversikt</a> |
    <a href="/tasks">Bakgrundsjobb</a> |
    <a href="/builds">Kända byggen</a> |
    <a href="/logout">Logga ut</a>
  {{else}}
    Ej autentiserad | <a href="/login">Logga in</a>
  {{/if}}
</p>
{{{ body }}}
<hr>
<p align="center"><small>&gt;&gt;&gt; Running since {{ processEnv.SERVER_STARTUP_TIMESTAMP }}{{#if processEnv.IMAGE_TAG }}, using build {{ IMAGE_TAG }} from <a href="{{ processEnv.COMMIT_LINK }}">{{ processEnv.COMMIT_LINK }}</a> ({{ processEnv.BUILD_TIMESTAMP }}){{/if}} &lt;&lt;&lt;</small></p>
<hr>
</body>
</html>
